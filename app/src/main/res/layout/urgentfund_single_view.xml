<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/layoutUrgentfund"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/_8sdp"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/donationImages"
                android:adjustViewBounds="true"
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:src="@drawable/imageflood"
                />
            <TextView
                android:id="@+id/donationTitle"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_below="@+id/donationImages"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="Let's be a part of helping \nflood victims in Aceh"/>
            <TextView
                android:id="@+id/fundraiserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/donationTitle"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:drawableEnd="@drawable/ic_verified"
                android:gravity="top"
                android:text="Komunitas ACT"
                android:textColor="@color/neutral_N70"
                android:textSize="@dimen/_9ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/collected1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fundraiserName"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="top"
                android:text="collected"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />


            <ProgressBar
                android:id="@+id/progressbar1"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"
                android:layout_below="@id/collected1"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@id/donationImages"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:foregroundGravity="right"
                android:progress="68"
                android:progressDrawable="@drawable/curved_progress_bar"
                android:progressTint="@color/primary_200" />

            <TextView
                android:id="@+id/donationTarget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progressbar1"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="top"
                android:text="Rp 12.000.000"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/donationDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progressbar1"
                android:layout_alignTop="@id/donationTarget"
                android:layout_alignEnd="@id/donationImages"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_gravity="end"
                android:text="3 Days Left"
                android:textColor="@color/neutral_N70"
                android:textSize="@dimen/_7ssp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>