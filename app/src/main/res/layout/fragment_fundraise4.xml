<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FundraiseFragment4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:text="Nominal"
                android:fontFamily="@font/poppins_semi_bold"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/neutral_N500"
                android:layout_below="@id/layoutPhoto"/>
            <EditText
                android:id="@+id/inputNominal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:paddingHorizontal="@dimen/_15sdp"
                android:background="@drawable/edit_text_background_stroke_300"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableStart="@drawable/ic_text_rp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/neutral_N300"
                android:maxLength="30"
                android:hint="Enter the nominal fee required"
                android:textColorHint="@color/neutral_N50"
                android:inputType="number"
                android:imeOptions="actionNext" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:text="Determine the duration of the fundraising"
                android:fontFamily="@font/poppins_semi_bold"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/neutral_N500"
                android:layout_below="@id/layoutPhoto"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/oneMonth"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:icon="@drawable/ic_circle"
                    app:iconTint="@color/neutral_N500"
                    app:iconSize="@dimen/_15sdp"
                    android:text="one month"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/neutral_N500"
                    android:fontFamily="@font/poppins_regular"
                    android:background="@drawable/bg_stroke_rounded"
                    app:backgroundTint="@color/neutral_N300" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/threeMonth"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_10sdp"
                    app:icon="@drawable/ic_circle"
                    app:iconTint="@color/neutral_N500"
                    app:iconSize="@dimen/_15sdp"
                    android:text="3 month"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/neutral_N500"
                    android:fontFamily="@font/poppins_regular"
                    android:background="@drawable/bg_stroke_rounded"
                    app:backgroundTint="@color/neutral_N300" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sixMonth"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:icon="@drawable/ic_circle"
                    app:iconTint="@color/neutral_N500"
                    app:iconSize="@dimen/_15sdp"
                    android:text="6 month"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/neutral_N500"
                    android:fontFamily="@font/poppins_regular"
                    android:background="@drawable/bg_stroke_rounded"
                    app:backgroundTint="@color/neutral_N300" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/oneYear"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_10sdp"
                    app:icon="@drawable/ic_circle"
                    app:iconTint="@color/neutral_N500"
                    app:iconSize="@dimen/_15sdp"
                    android:text="one year"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/neutral_N500"
                    android:fontFamily="@font/poppins_regular"
                    android:background="@drawable/bg_stroke_rounded"
                    app:backgroundTint="@color/neutral_N300" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_8sdp"
                        android:text="Start"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/neutral_N500" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutDateStart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputDateStart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_background_stroke_300"
                            android:clickable="true"
                            android:focusable="true"
                            android:inputType="none"
                            android:text="dd/mm/yy"
                            android:textColor="@color/neutral_N300"
                            android:focusableInTouchMode="false"
                            android:drawableEnd="@drawable/ic_calendar"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_8sdp"
                        android:text="Finish"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/neutral_N500" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutDateFinish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputDateFInish"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_background_stroke_300"
                            android:clickable="true"
                            android:focusable="true"
                            android:inputType="none"
                            android:text="dd/mm/yy"
                            android:textColor="@color/neutral_N300"
                            android:focusableInTouchMode="false"
                            android:drawableEnd="@drawable/ic_calendar"/>
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>