            <TextView
                android:id="@+id/PermissionLetter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:gravity="top"
                android:drawableEnd="@drawable/ic_download"
